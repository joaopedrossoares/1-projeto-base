@model IEnumerable<PublicacaoViewModel>
@{
    ViewData["Title"] = "Publicações";
}
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Nova Publicação</a>
</p>
<!-- Deixando dinamico/ porem igual do modelo -->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Turma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avaliacao)
            </th>
            <th>
                Pontuação da Prova
                <!--Html.DisplayNameFor(model => model.ValorProva)-->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Turma.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Avaliacao.Disciplina) - @Html.DisplayFor(modelItem => item.Avaliacao.Materia) - @Html.DisplayFor(modelItem => item.Avaliacao.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorProva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCriacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFim)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit" title="Editar Publicação"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt" title="Excluir Publicação"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
